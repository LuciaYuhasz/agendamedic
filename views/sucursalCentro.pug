//- Asegúrate de incluir el DOCTYPE al principio
doctype html
html(lang="es")
  head
    title Sucursal Centro - Agenda Médica
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet")
    link(rel="stylesheet", href="/styles.css") 
    style.
      /* Estilos adicionales para hacer la página más atractiva */
      body {
        background-color: #f8f9fa;
        font-size: 1.1rem; /* Aumenta el tamaño de la fuente general */
      }
      .card {
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 15px; /* Bordes redondeados */
      }
      .card:hover {
        transform: scale(1.05);
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.3); /* Sombra más pronunciada */
      }
      .icon-large {
        font-size: 50px;
        color: #0d6efd;
        margin-bottom: 15px;
        transition: transform 0.3s; /* Transición para el icono */
      }
      .icon-large:hover {
        transform: scale(1.1); /* Efecto de escala en hover */
      }
      .header-banner {
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-shadow: 0 2px 5px rgba(0, 0, 0, 0.7);
        animation: fadeIn 2s; /* Animación de aparición */
      }
      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
      .header-banner h1 {
        font-size: 3rem;
        font-weight: bold;
        color: #ffffff;
        font-family: Arial, sans-serif;
        text-shadow: 0 2px 5px rgba(0, 0, 0, 0.7);
        margin-top: 20px; /* Ajusta el margen superior del h1 */
      }
      footer {
        background-color: #0d6efd;
        color: white;
      }
      button.btn {
        border-radius: 25px; /* Bordes redondeados para los botones */
      }
  body
    // Encabezado con imagen de fondo
    .header-banner
      h1 SUCURSAL CENTRO

    // Barra de navegación
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      .container-fluid
        a.navbar-brand(href="/") Agenda Médica
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link.active(href="/sucursal-centro") Sucursal Centro
            li.nav-item
              a.nav-link(href="/medicos") Médicos
            li.nav-item
              a.nav-link(href="/pacientes") Pacientes
            li.nav-item
              a.nav-link(href="/crear") Turnos

    // Contenido principal
    .container.my-5
      h2.text-center.mb-4 Secciones Destacadas

      // Sección de tarjetas con íconos y animaciones
      .row.justify-content-center
        .col-md-4.mb-4
          .card.text-center.shadow-sm(hover style="cursor: pointer;" onclick="goToPage('/pacientes')") 
            .card-body
              i.icon-large.bi.bi-people
              h5.card-title Pacientes
              p.card-text "Gestiona y consulta información de los pacientes."
              button.btn.btn-outline-primary Ver Pacientes
        .col-md-4.mb-4
          .card.text-center.shadow-sm(hover style="cursor: pointer;" onclick="goToPage('/crear')") 
            .card-body
              i.icon-large.bi.bi-calendar-check
              h5.card-title Turnos
              p.card-text "Crea y administra los turnos."
              button.btn.btn-outline-primary Ver Turnos
        .col-md-4.mb-4
          .card.text-center.shadow-sm(hover style="cursor: pointer;" onclick="goToPage('/medicos')") 
            .card-body
              i.icon-large.bi.bi-file-person
              h5.card-title Médicos
              p.card-text "Accede a la lista de médicos y sus especialidades."
              button.btn.btn-outline-primary Ver Médicos      

    // Footer
    footer.footer.bg-dark.py-4.mt-5
      .container.text-center
        p.mb-0
          | &copy; 2024 Agenda Médica

    // Scripts
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", crossorigin="anonymous")
    script.
      function goToPage(url) {
        window.location.href = url;
      }


